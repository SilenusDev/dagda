# cauldron/cromlech/mariadb/config/my.cnf
# Configuration MariaDB pour DAGDA-LITE Production
# Version sécurisée - port interne conteneur fixe à 3306

[mysqld]
# Port interne conteneur (NE PAS CHANGER - mapping fait par Podman)
port = 3306

# Bind sur toutes les interfaces pour permettre les connexions externes
bind-address = 0.0.0.0

# Sécurité Production
skip-networking = 0
local-infile = 0

# Performance optimisée pour développement
max_connections = 50
innodb_buffer_pool_size = 128M
innodb_log_file_size = 32M

# Charset UTF8
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Logs désactivés pour éviter les erreurs de chemin
general_log = 0
slow_query_log = 0

[client]
default-character-set = utf8mb4

[mysql]
default-character-set = utf8mb4